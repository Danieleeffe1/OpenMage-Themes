<?php
?>
<?php $__subCategories = $this->getSubcategoriesForCategory(); ?>
<?php if ($__subCategories->count()): ?>

    <?php if ($this->scanSubSubCategories($__subCategories)): ?>
    
        <div class="lines">
        <?php if (!$this->isInRootCategory()): ?>
        <h2>
            <?php echo Mage::registry('current_category')->getName() ?>
        </h2>
        <?php endif; ?>

        <table>
        <?php foreach ($__subCategories as $category):?>
            <tr>
                <td>
                    <div class="sub">
                        <?php if ($this->getThumbnailImg($category)): ?>
                            <a href = "<?php echo Mage::helper('catalog/category')->getCategoryUrl($category) ?>">
                                <img src=<?php echo Mage::app()->getStore(0)->getBaseUrl('media').'catalog/category/'.$this->getThumbnailImg($category); ?> width="<?php echo $this->getThumbnailSize(); ?>px" />
                            </a>
                        <?php endif; ?>
                    </div>
                </td>
                <td>
                    <div class="sub">
                        <?php if ($this->getThumbnailInsteadofText($category)): ?>
                        <div class="cat_name">
                            <a href = "<?php echo Mage::helper('catalog/category')->getCategoryUrl($category) ?>"><?php echo $category->getName() ?></a>
                        </div>
                        <?php endif; ?>
                        <?php if (($__activeSubCategories = $this->getActiveSubcategories($category))): ?>
                        <div class="sub_cats">
                            <?php $tmp = 0; ?>
                            <?php foreach($__activeSubCategories as $key => $subCategory):?>
                                  <a href = "<?php echo Mage::helper('catalog/category')->getCategoryUrl($subCategory) ?>"><?php echo $subCategory->getName() ?></a><?php
                                    $tmp++;
                                    if ($tmp != $__activeSubCategories->count()) echo ","; ?>
                            <?php endforeach ?>
                        </div>
                        <?php endif ?>
                    </div>
               </td>
            </tr>
        <?php endforeach ?>
        </table>
        </div>

    <?php else: ?>

        <div class="lines">
            <?php if (!$this->isInRootCategory()): ?>
            <h2>
                <?php echo Mage::registry('current_category')->getName() ?>
            </h2>
            <?php endif ?>
            <?php $tmp = 0; ?>
            <?php foreach ($__subCategories as $category):?>
                <div class="sub_cats">
                    <a href = "<?php echo Mage::helper('catalog/category')->getCategoryUrl($category) ?>"><?php echo $category->getName() ?></a><?php
                        $tmp++;
                        if ($tmp != $__subCategories->count()) echo ",&nbsp;"; ?>
                </div>
            <?php endforeach ?>
        </div>
        <div style="clear:both"></div>
        
    <?php endif; ?>

<?php endif; ?>
